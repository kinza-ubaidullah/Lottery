{
    "version": 2,
    "functions": {
        "api/index.ts": {
            "runtime": "vercel-node@latest",
            "memory": 1024
        }
    },
    "rewrites": [
        {
            "source": "/(assets|figmaAssets)/(.*)",
            "destination": "/client/public/$1/$2"
        },
        {
            "source": "/favicon.ico",
            "destination": "/client/public/favicon.ico"
        },
        {
            "source": "/api/(.*)",
            "destination": "/api/index.ts"
        },
        {
            "source": "/(.*)",
            "destination": "/api/index.ts"
        }
    ]
}