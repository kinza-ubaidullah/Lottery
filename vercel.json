{
    "version": 2,
    "builds": [
        {
            "src": "server/index.ts",
            "use": "@vercel/node"
        },
        {
            "src": "client/**/*",
            "use": "@vercel/static"
        }
    ],
    "rewrites": [
        {
            "source": "/api/(.*)",
            "destination": "server/index.ts"
        },
        {
            "source": "/favicon.ico",
            "destination": "client/public/favicon.ico"
        },
        {
            "source": "/(.*)",
            "destination": "server/index.ts"
        }
    ]
}